ETCD_NAME="{{ etcd_name }}"
ETCD_DATA_DIR="/var/lib/etcd"
{% if groups['cfg']|length > 1 %}
ETCD_INITIAL_CLUSTER_STATE="existing"
ETCD_INITIAL_CLUSTER_TOKEN="{{ etcd_token }}"
ETCD_INITIAL_CLUSTER="{{ etcd_cluster }}"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://{{ etcd_ip }}:2380"
ETCD_LISTEN_PEER_URLS="http://{{ etcd_ip }}:2380"
{% endif %}
ETCD_ADVERTISE_CLIENT_URLS="http://{{ etcd_ip }}:2379,http://127.0.1.1:2379"
ETCD_LISTEN_CLIENT_URLS="http://{{ etcd_ip }}:2379,http://127.0.1.1:2379"
# Use higher heartbeat and election timeouts to paper over any slow VM disks
ETCD_HEARTBEAT_INTERVAL=200
ETCD_ELECTION_TIMEOUT=2000